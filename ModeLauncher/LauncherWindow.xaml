<Window x:Class="ModeLauncher.LauncherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ModeLauncher.Converters"
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize"
        Topmost="True"
        Background="Black"
        Title="ModeLauncher">

    <Grid Name="Root"
          Background="#101115"
          Focusable="True"
          KeyDown="Root_KeyDown"
          MouseDown="Root_MouseDown"
          Loaded="Root_Loaded">

        <Grid Margin="60">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center"
                        Margin="0,20,0,30"
                        TextBlock.TextAlignment="Center">
                <TextBlock Text="Choose Mode"
                           FontSize="34"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding CountdownText}"
                           FontSize="16"
                           Foreground="#CCCCCC"
                           HorizontalAlignment="Center"
                           Margin="0,6,0,0"/>
            </StackPanel>

            <!-- MODES -->
            <ItemsControl Grid.Row="1" ItemsSource="{Binding Modes}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="240"
                                Height="200"
                                Margin="10"
                                CornerRadius="18"
                                Background="#1E1F24"
                                BorderBrush="{Binding IsSelected, Converter={StaticResource BoolToHighlightConverter}}"
                                BorderThickness="2"
                                MouseLeftButtonDown="ModeTile_MouseLeftButtonDown">

                            <StackPanel VerticalAlignment="Center"
                                        HorizontalAlignment="Center">

                                <Image Source="{Binding Icon}"
                                       Width="58" Height="58"
                                       Margin="0,10,0,8"/>

                                <TextBlock Text="{Binding Label}"
                                           Foreground="White"
                                           FontSize="20"
                                           HorizontalAlignment="Center"/>

                                <TextBlock Text="{Binding Subtitle}"
                                           Foreground="#AAAAAA"
                                           FontSize="12"
                                           HorizontalAlignment="Center"
                                           Margin="0,4,0,0"/>

                            </StackPanel>

                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- FOOTER -->
            <StackPanel Grid.Row="2" HorizontalAlignment="Right" Margin="0,15,0,0">
                <TextBlock Text="Ctrl+S: Settings   |   ESC: Exit"
                           Foreground="#777"
                           FontSize="14"/>
            </StackPanel>

        </Grid>
    </Grid>
</Window>
