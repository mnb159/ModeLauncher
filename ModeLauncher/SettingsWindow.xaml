<Window x:Class="ModeLauncher.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Settings"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Width="800" Height="650"
        Background="#1b1c20"
        Foreground="White">

    <Window.Resources>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2a2b30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Margin" Value="0,4,0,12"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#d0d0d0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,12,0,2"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="6"/>
        </Style>

    </Window.Resources>


    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <TextBlock Text="Settings"
                   Grid.Row="0"
                   FontSize="28"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- CONTENT -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Modes}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#232428"
                                Padding="16"
                                Margin="0,0,0,18"
                                CornerRadius="10">

                            <StackPanel>

                                <TextBlock Text="Mode id (unique)" />
                                <TextBox Text="{Binding Id}" />

                                <TextBlock Text="Title" />
                                <TextBox Text="{Binding Label}" />

                                <TextBlock Text="Subtitle" />
                                <TextBox Text="{Binding Subtitle}" />

                                <TextBlock Text="Executable path" />
                                <TextBox Text="{Binding ExecutablePath}" />

                                <TextBlock Text="Arguments" />
                                <TextBox Text="{Binding Arguments}" />

                            </StackPanel>

                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- FOOTER BUTTONS -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,14,0,0">

            <Button Content="Add" Width="90"
                    Command="{Binding AddModeCommand}"/>

            <Button Content="Remove last" Width="120"
                    Command="{Binding RemoveModeCommand}"/>

            <Button Content="Save" Width="90"
                    Command="{Binding SaveCommand}"/>

            <Button Content="Close" Width="90"
                    Command="{Binding CloseCommand}"/>

        </StackPanel>

    </Grid>

</Window>
