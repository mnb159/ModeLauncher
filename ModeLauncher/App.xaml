<Application x:Class="ModeLauncher.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:ModeLauncher.Converters"

             StartupUri="LauncherWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>

            <!-- Easing function for animations -->
            <QuadraticEase x:Key="SmoothEase" EasingMode="EaseOut"/>

            <!-- Converters -->
            <conv:BoolToHighlightConverter x:Key="BoolToHighlightConverter" />


        </ResourceDictionary>
    </Application.Resources>
</Application>
